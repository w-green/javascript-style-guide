{
  // http://jshint.com/docs/options/
  "browser": false, // Standard browser globals e.g. `window`, `document`
  "camelcase": true, // force all variable names to use either camelCase style or UPPER_CASE with underscores
  "curly": true, //  always put curly braces around blocks in loops and conditionals
  "eqeqeq": true, // prohibits the use of == and != in favor of === and !==
  "freeze": true, // prohibits overwriting prototypes of native objects
  "funcscope": true, // suppresses warnings about declaring variables inside of control structures while accessing them later from the outside
  "globals": { // Globals variables.
    "jasmine": true,
    "angular": true
  },
  "indent": 2, // sets a specific tab width for your code
  "latedef": "nofunc", // prohibits the use of a variable before it was defined. "nofunc" will allow function declarations to be ignored
  "newcap": true, // capitalize names of constructor functions
  "predef": [ // Extra globals.
    "define",
    "require",
    "exports",
    "module",
    "describe",
    "before",
    "beforeEach",
    "after",
    "afterEach",
    "it",
    "inject",
    "expect",
    "browser",
    "by",
    "element",
    "xit",
    "spyOn"
  ],
  "quotmark": "single",
  "undef": true, // prohibits the use of explicitly undeclared variables
  "devel": true, // Allow development statements e.g. `console.log();`.
  "noempty": true // Prohibit use of empty blocks.
}
